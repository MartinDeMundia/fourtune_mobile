<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner_dark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110sp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/fourtune_new_logo" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:padding="0dp"
        android:src="@drawable/fourtune"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/titletxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/splashText"
            android:layout_width="300sp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:text="FOURTUNE GAMING"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            app:fontFamily="@font/monotonregular" />

        <TextView
            android:id="@+id/splashDesc"
            android:layout_width="500sp"
            android:layout_height="37sp"
            android:layout_gravity="center"
            android:text="Earn as you play your favourite games"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:fontFamily="@font/reeniebeanie" />

    </LinearLayout>


</LinearLayout>