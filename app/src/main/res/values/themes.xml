<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fourtune" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Fourtune.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fourtune.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fourtune.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.Holo.Calendar" parent="@android:style/Theme.Holo">
        <item name="android:textAppearance">@style/TextAppearance.L</item>
        <item name="android:textAppearanceInverse">@style/TextAppearance.Inverse.L</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large.L</item>
        <item name="android:textAppearanceLargeInverse">@style/TextAppearance.Large.Inverse.L</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small.L</item>
        <item name="android:textAppearanceSmallInverse">@style/TextAppearance.Small.Inverse.L</item>
    </style>

    <!-- Holo.Light -->
    <style name="Theme.Holo.Light.Calendar" parent="@android:style/Theme.Holo.Light">
        <item name="android:textAppearance">@style/TextAppearance.L</item>
        <item name="android:textAppearanceInverse">@style/TextAppearance.Inverse.L</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large.L</item>
        <item name="android:textAppearanceLargeInverse">@style/TextAppearance.Large.Inverse.L</item>
    </style>


</resources>